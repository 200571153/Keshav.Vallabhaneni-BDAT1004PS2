   "source": [
    "def tough(indent, n):\n",
    "    if n > 0:\n",
    "        tough(indent, n - 1)\n",
    "        print(\" \" * indent + \"*\" * n)\n",
    "        tough(indent + 1, n - 1)\n",
    "tough(0,0)\n",
    "\n"
   ]
